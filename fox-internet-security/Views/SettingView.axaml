<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:fox_internet_security.ViewModels"
			 x:DataType="vm:SettingViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="fox_internet_security.Views.SettingView">

	<!-- 右侧UI，此为设置 -->

	<Grid RowDefinitions="30,*">
		<Panel Background="#80FFFFFF" IsHitTestVisible="False" Grid.Row="0"/>

		<ScrollViewer Background="#80FFFFFF" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="1">

			<StackPanel Spacing="20" Margin="30">

				<!-- 自动更新设置 -->
				<Border Classes="settings-card">
					<StackPanel Spacing="15">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<Path Data="M19 14l-7 7m0 0l-7-7m7 7V3"
								  Stroke="#202020" StrokeThickness="2"
								  Width="20" Height="20" Stretch="Uniform"/>
							<TextBlock Text="自动更新" Classes="section-title"
									   FontSize="16" FontWeight="Medium"/>
						</StackPanel>
						<Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
							<TextBlock Text="自动下载并安装更新"
									   Grid.Row="0" Grid.Column="0"
									   VerticalAlignment="Center"/>
							<ToggleSwitch IsChecked="True"
										  Grid.Row="0" Grid.Column="1"
										  HorizontalAlignment="Right"/>

							<TextBlock Text="检查更新频率"
									   Grid.Row="1" Grid.Column="0"
									   VerticalAlignment="Center"
									   Margin="0,10,0,0"/>
							<ComboBox SelectedIndex="1"
									  Grid.Row="1" Grid.Column="1"
									  HorizontalAlignment="Right"
									  Width="120"
									  Margin="0,10,0,0">
								<ComboBoxItem>每天</ComboBoxItem>
								<ComboBoxItem>每周</ComboBoxItem>
								<ComboBoxItem>每月</ComboBoxItem>
							</ComboBox>
						</Grid>
					</StackPanel>
				</Border>

				<!-- 自启动设置 -->
				<Border Classes="settings-card">
					<StackPanel Spacing="15">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<Path Data="M13 10V3L4 14h7v7l9-11h-7z"
								  Stroke="#202020" StrokeThickness="2"
								  Width="20" Height="20" Stretch="Uniform"/>
							<TextBlock Text="自启动设置" Classes="section-title"
									   FontSize="16" FontWeight="Medium"/>
						</StackPanel>

						<Grid ColumnDefinitions="*,Auto">
							<TextBlock Text="开机自动启动"
									   VerticalAlignment="Center"/>
							<ToggleSwitch IsChecked="False"
										  HorizontalAlignment="Right"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- 扫描设设置 -->
				<Border Classes="settings-card">
					<StackPanel Spacing="15">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<Path Data="M120-40q-33 0-56.5-23.5T40-120v-80q0-17 11.5-28.5T80-240q17 0 28.5 11.5T120-200v80h80q17 0 28.5 11.5T240-80q0 17-11.5 28.5T200-40h-80Zm720 0h-80q-17 0-28.5-11.5T720-80q0-17 11.5-28.5T760-120h80v-80q0-17 11.5-28.5T880-240q17 0 28.5 11.5T920-200v80q0 33-23.5 56.5T840-40ZM480-220q-106 0-196-56T143-429q-6-12-9-24.5t-3-25.5q0-14 3-27t9-25q51-97 141-153t196-56q106 0 196 56t141 153q6 12 9 24.5t3 26.5q0 14-3 26.5t-9 24.5q-51 97-141 153t-196 56Zm0-120q58 0 99-41t41-99q0-58-41-99t-99-41q-58 0-99 41t-41 99q0 58 41 99t99 41Zm0-80q-25 0-42.5-17.5T420-480q0-25 17.5-42.5T480-540q25 0 42.5 17.5T540-480q0 25-17.5 42.5T480-420Zm440-420v80q0 17-11.5 28.5T880-720q-17 0-28.5-11.5T840-760v-80h-80q-17 0-28.5-11.5T720-880q0-17 11.5-28.5T760-920h80q33 0 56.5 23.5T920-840Zm-800-80h80q17 0 28.5 11.5T240-880q0 17-11.5 28.5T200-840h-80v80q0 17-11.5 28.5T80-720q-17 0-28.5-11.5T40-760v-80q0-33 23.5-56.5T120-920Z"
								  Stroke="#202020" StrokeThickness="1.5"
								  Width="20" Height="20" Stretch="Uniform"/>
							<TextBlock Text="扫描设置" Classes="section-title"
									   FontSize="16" FontWeight="Medium"/>
						</StackPanel>
						<Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
							<TextBlock Text="启用Yara引擎"
									   Grid.Row="0" Grid.Column="0"
									   VerticalAlignment="Center"/>
							<ToggleSwitch IsChecked="True"
										  Grid.Row="0" Grid.Column="1"
										  HorizontalAlignment="Right"/>

							<TextBlock Text="启用{占位}引擎"
									   Grid.Row="1" Grid.Column="0"
									   VerticalAlignment="Center"
									   Margin="0,10,0,0"/>
							<ToggleSwitch IsChecked="True"
										  Grid.Row="1" Grid.Column="1"
										  HorizontalAlignment="Right"
										  Margin="0,10,0,0"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- VirusTotal API配置 -->
				<Border Classes="settings-card">
					<StackPanel Spacing="15">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<Path Data="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
								  Stroke="#202020" StrokeThickness="2"
								  Width="20" Height="20" Stretch="Uniform"/>
							<TextBlock Text="VirusTotal API配置" Classes="section-title"
									   FontSize="16" FontWeight="Medium"/>
						</StackPanel>

						<Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="10">
							<TextBlock Text="API密钥"
									   Grid.Row="0" Grid.Column="0"
									   VerticalAlignment="Center"/>
							<TextBox Watermark="输入您的API密钥"
									 Grid.Row="1" Grid.Column="0"
									 PasswordChar="*"/>

							<TextBox Text="https://www.virustotal.com/vtapi/v2/"
									 Grid.Row="3" Grid.Column="0"
									 IsReadOnly="True"
									 Margin="0,0,0,10"/>

							<Button Content="测试连接"
									Grid.Row="1" Grid.Column="1"
									Grid.RowSpan="3"
									VerticalAlignment="Center"
									Margin="10,0,0,0"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- 操作按钮 -->
				<StackPanel Orientation="Horizontal"
							HorizontalAlignment="Center"
							Spacing="15"
							Margin="0,20,0,0">
					<Button Content="保存设置" Classes="accent"/>
					<Button Content="恢复默认"/>
				</StackPanel>
			</StackPanel>
		</ScrollViewer>

	</Grid>




</UserControl>
