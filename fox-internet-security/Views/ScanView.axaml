<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:fox_internet_security.ViewModels"
			 x:DataType="vm:ScanViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="fox_internet_security.Views.ScanView">

	<!-- 右侧UI，此为扫描界面 -->
	<Grid RowDefinitions="30,*">
		<!-- 标题栏区域 -->
		<Panel Background="#80FFFFFF" IsHitTestVisible="False" Grid.Row="0"></Panel>
		<!-- 内容区域 -->
		<ScrollViewer Grid.Row="1"
					  Background="#80FFFFFF"
					  Padding="20">
			<StackPanel Margin="20">
				<!-- 扫描状态卡片 -->
				<Border Background="#80FFFFFF"
						CornerRadius="8"
						Padding="15"
						Margin="0,0,0,20"
						BoxShadow="0 2 5 0 #20000000">
					<Grid ColumnDefinitions="Auto,*,Auto">
						<TextBlock Text="🔍"
								   FontSize="18"
								   Margin="0,0,10,0"
								   VerticalAlignment="Center"/>

						<StackPanel Grid.Column="1">
							<TextBlock Text="扫描状态"
									   FontWeight="Medium"
									   Foreground="#333333"/>
							<TextBlock Text="全盘扫描 - 正在扫描系统文件"
									   FontSize="12"
									   Foreground="#666666"/>
						</StackPanel>

						<!-- 停止扫描按钮 -->
						<Button Grid.Column="2"
								Content="停止"
								Classes="accent"
								Foreground="White"
								Padding="10,5"
								CornerRadius="4"
								BorderThickness="0"
								HorizontalAlignment="Right"
								VerticalAlignment="Center"/>
					</Grid>
				</Border>

				<!-- 扫描进度 -->
				<Border Background="#80FFFFFF"
						CornerRadius="5"
						Padding="15"
						Margin="0,0,0,20"
						BoxShadow="0 2 5 0 #20000000">
					<StackPanel Spacing="10">
						<TextBlock Text="扫描进度"
								   FontSize="16"
								   FontWeight="Medium"
								   Foreground="#333333"/>

						<ProgressBar Value="42"
									 Height="20"
									 Background="#80FFFFFF"
									 Foreground="{DynamicResource SystemAccentColor}"
									 CornerRadius="3"/>

						<Grid ColumnDefinitions="*,Auto">
							<TextBlock Text="正在扫描: C:\Windows\System32\drivers\..."
									   Foreground="#666666"/>
							<TextBlock Grid.Column="1"
									   Text="42%"
									   Foreground="#666666"/>
						</Grid>

						<Grid ColumnDefinitions="*,*,*">
							<TextBlock Text="已扫描: 8,542 个文件"
									   FontSize="12"
									   Foreground="#666666"/>
							<TextBlock Grid.Column="1"
									   Text="发现威胁: 0"
									   FontSize="12"
									   Foreground="#666666"/>
							<TextBlock Grid.Column="2"
									   Text="剩余时间: 12分钟"
									   FontSize="12"
									   Foreground="#666666"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- 扫描结果 -->
				<Border Background="#80FFFFFF"
						CornerRadius="5"
						Padding="15"
						BoxShadow="0 2 5 0 #20000000">
					<StackPanel Spacing="10">
						<TextBlock Text="扫描结果"
								   FontSize="16"
								   FontWeight="Medium"
								   Foreground="#333333"/>

						<ListBox Background="Transparent"
								 BorderThickness="0"
								 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
							<!-- 威胁项示例 -->
							<ListBoxItem>
								<Grid ColumnDefinitions="Auto,*" Width="400">
									<TextBlock Text="⚠️"
											   FontSize="18"
											   Margin="0,0,10,0"
											   VerticalAlignment="Center"/>
									<StackPanel Grid.Column="1">
										<TextBlock Text="检测到潜在威胁"
												   FontWeight="Medium"
												   Foreground="#D32F2F"/>
										<TextBlock Text="C:\Users\Downloads\suspicious.exe"
												   FontSize="12"
												   Foreground="#999999"/>
									</StackPanel>
								</Grid>
							</ListBoxItem>

							<!-- 安全文件示例 -->
							<ListBoxItem>
								<Grid ColumnDefinitions="Auto,*" Width="400">
									<TextBlock Text="✅"
											   FontSize="18"
											   Margin="0,0,10,0"
											   VerticalAlignment="Center"/>
									<StackPanel Grid.Column="1">
										<TextBlock Text="文件安全"
												   FontWeight="Medium"
												   Foreground="#388E3C"/>
										<TextBlock Text="C:\Windows\explorer.exe"
												   FontSize="12"
												   Foreground="#999999"/>
									</StackPanel>
								</Grid>
							</ListBoxItem>

							<!-- 扫描中文件示例 -->
							<ListBoxItem>
								<Grid ColumnDefinitions="Auto,*" Width="400">
									<TextBlock Text="🔄"
											   FontSize="18"
											   Margin="0,0,10,0"
											   VerticalAlignment="Center"/>
									<StackPanel Grid.Column="1">
										<TextBlock Text="正在扫描"
												   FontWeight="Medium"
												   Foreground="#1976D2"/>
										<TextBlock Text="C:\Program Files\...\application.dll"
												   FontSize="12"
												   Foreground="#999999"/>
									</StackPanel>
								</Grid>
							</ListBoxItem>
						</ListBox>
					</StackPanel>
				</Border>
			</StackPanel>
		</ScrollViewer>
	</Grid>
	
	
</UserControl>
